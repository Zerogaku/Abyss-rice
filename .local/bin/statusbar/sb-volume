#!/bin/sh

# Prints the current volume or 游댆 if muted.

#case $BLOCK_BUTTON in
#	1) setsid -w -f "$TERMINAL" -e pulsemixer; pkill -RTMIN+8 "${STATUSBAR:-dwmblocks}" ;;
#	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
#	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ ;;
#	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- ;;
#	3) notify-send "游닉 Volume module" "\- Shows volume 游댉, 游댆 if muted.
#- Middle click to mute.
#- Scroll to change." ;;
#	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
#esac

. ~/.local/bin/statusbar/ext/sb-colors
case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle ;;
	4) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%+ ;;
	5) wpctl set-volume @DEFAULT_AUDIO_SINK@ 1%- ;;
	3) notify-send "胄늮 Volume module" "\- Shows volume 胄, 胄두 if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
vol="$(wpctl get-volume @DEFAULT_AUDIO_SINK@)"

# If muted, print 游댆 and exit.
[ "$vol" != "${vol%\[MUTED\]}" ] && echo "${Volbg}${Volicon} 胄두 " && exit

vol="${vol#Volume: }"

split() {
	# For ommiting the . without calling and external program.
	IFS=$2
	set -- $1
	printf '%s' "$@"
}

vol="$(printf "%.0f" "$(split "$vol" ".")")"

case 1 in
	$((vol >= 70)) ) icon="胄" ;;
	$((vol >= 30)) ) icon="胄" ;;
	$((vol >= 1)) ) icon="胄" ;;
	* ) echo "${Volbg}${Volicon} 胄두 " && exit;;
esac

#echo "^b$Lbl^^c$LF^ $icon ^b$Dbl^^c$LF^ $vol%"
echo "${Volicon} $icon ${Volinfo} $vol%"
#echo "$icon $vol%"
